# N8N-R8 Development Environment Configuration
# Copy this file to .env and modify the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=n8n_dev
POSTGRES_USER=n8n_dev_user
POSTGRES_PASSWORD=dev_password_123

# ===========================================
# Redis Configuration (for queue testing)
# ===========================================
REDIS_PASSWORD=devpassword

# ===========================================
# N8N Configuration
# ===========================================
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Webhook URL (adjust for your development setup)
WEBHOOK_URL=http://localhost:5678/

# Security (use simple keys for development)
N8N_ENCRYPTION_KEY=dev_encryption_key_32_characters
N8N_JWT_SECRET=dev_jwt_secret_here

# Host configuration
N8N_HOST=localhost
N8N_PROTOCOL=http

# ===========================================
# System Configuration
# ===========================================
TIMEZONE=UTC

# ===========================================
# Development Tools
# ===========================================
# PgAdmin credentials
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123

# ===========================================
# Development Settings
# ===========================================
# Enable all development features
N8N_LOG_LEVEL=debug
NODE_ENV=development
