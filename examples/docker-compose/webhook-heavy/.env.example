# N8N-R8 Webhook-Heavy Configuration
# Copy this file to .env and modify the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=n8n_webhook
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# ===========================================
# N8N Configuration
# ===========================================
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Webhook URL (adjust for your domain)
WEBHOOK_URL=http://localhost:5678/

# Security
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
N8N_JWT_SECRET=your_jwt_secret_here
N8N_SECURE_COOKIE=false

# Host configuration
N8N_HOST=localhost
N8N_PROTOCOL=http

# ===========================================
# System Configuration
# ===========================================
TIMEZONE=UTC

# ===========================================
# Webhook-Specific Settings
# ===========================================
# Log level for debugging webhook issues
N8N_LOG_LEVEL=info

# Performance tuning
NODE_OPTIONS=--max-old-space-size=4096

# ===========================================
# Nginx Configuration
# ===========================================
NGINX_PORT=80
NGINX_SSL_PORT=443
